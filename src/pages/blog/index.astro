---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const posts = (await getCollection('blog', ({ data }) => !data.draft)).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}

function getSlug(id: string): string {
  return id.replace(/\.(md|mdx)$/, '');
}
---

<Layout title="Blog" description="Read our latest articles and updates.">
  <Header currentPath="/blog" />

  <main class="min-h-screen py-12">
    <div class="container mx-auto px-4 max-w-4xl">
      <h1 class="text-4xl font-bold mb-8">Blog</h1>

      {
        posts.length === 0 ? (
          <div class="text-center py-12">
            <p class="text-base-content/60">No posts yet. Check back soon!</p>
          </div>
        ) : (
          <div class="space-y-8">
            {posts.map((post) => (
              <article class="card bg-base-200 shadow-sm hover:shadow-md transition-shadow">
                <div class="card-body">
                  <div class="flex flex-wrap gap-2 mb-2">
                    {post.data.tags.map((tag) => (
                      <span class="badge badge-outline badge-sm">{tag}</span>
                    ))}
                  </div>
                  <h2 class="card-title">
                    <a
                      href={`/blog/${getSlug(post.id)}`}
                      class="hover:text-primary transition-colors"
                    >
                      {post.data.title}
                    </a>
                  </h2>
                  <p class="text-base-content/70">{post.data.description}</p>
                  <div class="flex items-center gap-4 text-sm text-base-content/60 mt-2">
                    <span>{post.data.author}</span>
                    <span>Â·</span>
                    <time datetime={post.data.pubDate.toISOString()}>
                      {formatDate(post.data.pubDate)}
                    </time>
                  </div>
                  <div class="card-actions justify-end mt-4">
                    <a href={`/blog/${getSlug(post.id)}`} class="btn btn-primary btn-sm">
                      Read more
                    </a>
                  </div>
                </div>
              </article>
            ))}
          </div>
        )
      }
    </div>
  </main>

  <Footer />
</Layout>
