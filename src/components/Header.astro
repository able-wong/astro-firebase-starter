---
import { MenuIcon } from './icons';
import ThemeSelector from './ThemeSelector';

interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/blog', label: 'Blog' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];
---

<header class="navbar bg-base-100 shadow-sm px-4 lg:px-8">
  <!-- Logo -->
  <div class="navbar-start">
    <a href="/" class="btn btn-ghost text-xl">Company Name</a>
  </div>

  <!-- Desktop Navigation + Theme -->
  <div class="navbar-end">
    <ul class="menu menu-horizontal px-1 hidden lg:flex">
      {
        navLinks.map((link) => (
          <li>
            <a href={link.href} class={currentPath === link.href ? 'active' : ''}>
              {link.label}
            </a>
          </li>
        ))
      }
    </ul>
    <ThemeSelector client:load />

    <!-- Mobile Menu Button -->
    <div class="dropdown dropdown-end lg:hidden">
      <div tabindex="0" role="button" class="btn btn-ghost">
        <MenuIcon className="h-5 w-5" />
      </div>
      <ul
        tabindex="0"
        class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow"
      >
        {
          navLinks.map((link) => (
            <li>
              <a href={link.href} class={currentPath === link.href ? 'active' : ''}>
                {link.label}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</header>
